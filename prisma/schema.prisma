// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// AUTH.JS MODELS (Required for NextAuth)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  // YOUR CUSTOM RELATION
  chatSessions  ChatSession[]
  feedback      Feedback[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// YOUR CUSTOM MODELS FOR CHAT HISTORY
model ChatSession {
  id          String        @id @default(cuid())
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  characterId String
  title       String?       // Optional title for the chat
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    ChatMessage[]
  feedback    Feedback[]
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role      String      // 'user' or 'model'
  content   String      // The message content
  createdAt DateTime    @default(now())
  // Add relation to feedback
  feedback  Feedback[]
}

// FEEDBACK MODEL
model Feedback {
  id           String       @id @default(cuid())
  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  feedbackType String       // 'message_rating', 'session_rating', 'weekly_checkin', etc.
  rating       Int?         // For star ratings (1-5) or thumbs up/down (+1/-1)
  textComment  String?      // Optional text feedback
  messageId    String?      // For message-specific feedback
  message      ChatMessage? @relation(fields: [messageId], references: [id], onDelete: Cascade)
  sessionId    String?      // For session-specific feedback
  session      ChatSession? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
